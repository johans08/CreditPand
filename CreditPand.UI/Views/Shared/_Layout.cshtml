<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Credit Pand</title>

    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <!-- Header -->
    <!-- Sub Header opciones de usuario -->
    <div class="sub-header">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-xs-12">
                    <ul class="left-info">

                        @{
                            string nombre = "Johans"; <!-- Debe de ir el nombre del que inicio la sesión -->
                            //string session = @Session["Username"].ToString();

                        }
                        <!--Welcome //Session["Username"].ToString()-->
                        <li><a><i class="fa fa-laptop"></i> Opciones de Usuario</a></li> <!-- Perfil del Usuario -->
                        <li><a href="@Url.Action("User", "Usuario")"><i class="fa fa-user"></i> Usuario : @nombre</a></li> <!-- Perfil de Administrador -->
                    </ul>
                </div>
                <div class="col-md-4">
                    <ul class="right-icons">
                        <li><a href="@Url.Action("ClientCards", "Tarjeta")"><i class="fa fa-credit-card"></i></a></li> <!-- Manejo de Tarjetas de Credito CLIENTE -->
                        <li><a href="@Url.Action("Login", "Usuario")"><i class="fa fa-sign-in"></i></a></li> <!-- Salir -->
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Sub Header opciones de Administrador -->
    <div class="sub-header " style="background-color: #808080; ">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-xs-12">
                    <ul class="left-info">
                        <li><a><i class="fa fa-laptop"></i> Opciones de Administrador </a></li> <!-- Opciones de Administrador -->
                        <li><a href="@Url.Action("User", "Usuario")"><i class="fa fa-user"></i> Admin : @nombre</a></li> <!-- Perfil de Administrador -->
                    </ul>
                </div>
                <div class="col-md-4">
                    <ul class="right-icons">
                        <li><a href="@Url.Action("AdminCharts", "Home")"><i class="fa fa-bar-chart"></i></a></li> <!-- Graficas de las diferentes tablas -->
                        <li><a href="@Url.Action("Mantenimientos", "Usuario")"><i class="fa fa-list"></i></a></li> <!-- Lista de Usuarios -->
                        <li><a href="@Url.Action("AdminCards", "Tarjeta")"><i class="fa fa-credit-card"></i></a></li> <!-- Manejo de Tarjetas de Credito ADMIN -->
                        <li><a href="@Url.Action("InteresesForm", "Tarjeta")"><i class="fa fa-usd"></i></a></li> <!-- Manejo de Tarjetas de Credito -->
                        <li><a href="@Url.Action("Login", "Usuario")"><i class="fa fa-sign-in"></i></a></li> <!-- Salir -->
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <header class="">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" href="Index"><h2>Credit Pand</h2></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">
                                Inicio
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("About", "Home")">Sobre Nosotros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Contact", "Home")">Contactenos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Register", "Usuario")">Registrar Usuario</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    @RenderBody()

    <div class="partners contact-partners">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="owl-partners owl-carousel">
                        <div class="partner-item">
                            <img src="~/Content/Images/Panda.png" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer Starts Here -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-3 footer-item">
                    <h4>Credit Pand</h4>
                    <p>Siguenos en nuestras redes sociales.</p>
                    <ul class="social-icons">
                        <li><a rel="nofollow" href="https://fb.com/templatemo" target="_blank"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                        <li><a href="#"><i class="fa fa-behance"></i></a></li>
                    </ul>
                </div>
                <div class="col-md-3 footer-item">
                    <h4>Enlaces a GitHub</h4>
                    <ul class="menu-list">
                        <li><a href="https://github.com/johans08">GitHub Johans Valverde Díaz</a></li>
                        <li><a href="#">GitHub Simón Segura Castro</a></li>
                        <li><a href="https://github.com/KatheLJ">GitHub Katherine Loaiza Jarquín</a></li>
                        <li><a href="#">GitHub María Fernanda Cortes</a></li>
                        <li><a href="https://github.com/johans08/CreditPand">GitHub Repositorio del Proyecto</a></li>
                    </ul>
                </div>
                <div class="col-md-3 footer-item">
                    <h4>Paginas Adicionales</h4>
                    <ul class="menu-list">
                        <li><a href="@Url.Action("About", "Home")">Sobre Nosotros</a></li>
                        <li><a href="@Url.Action("Register", "Usuario")">Registrarse</a></li>
                        <li><a href="@Url.Action("Support", "Home")">Soporte</a></li>
                        <li><a href="@Url.Action("Contact", "Home")">Contáctanos</a></li>
                        <li><a href="@Url.Action("PrivacyPolicy", "Home")">Políticas de Privacidad</a></li>
                    </ul>
                </div>
                <div class="col-md-3 footer-item last-item">
                    <h4>Contactanos</h4>
                    <div class="contact-form">
                        <form id="contact footer-contact" action="" method="post">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <fieldset>
                                        <input name="name" type="text" class="form-control" id="name" placeholder="Nombre Completo" required="">
                                    </fieldset>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <fieldset>
                                        <input name="email" type="text" class="form-control" id="email" placeholder="E-Mail Address" required="">
                                    </fieldset>
                                </div>
                                <div class="col-lg-12">
                                    <fieldset>
                                        <textarea name="message" rows="6" class="form-control" id="message" placeholder="Mensaje" required=""></textarea>
                                    </fieldset>
                                </div>
                                <div class="col-lg-12">
                                    <fieldset>
                                        <button type="submit" id="form-submit" class="filled-button">Enviar</button>
                                    </fieldset>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <div class="sub-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p>
                        Copyright &copy; 2020 Financial Business Co., Ltd.

                        - Design: <a rel="nofollow noopener" href="https://templatemo.com" target="_blank">TemplateMo</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
</body>
</html>
